<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StrainCalculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/statusBarLight</item>
    </style>



    <!-- StatusBarLayoutStyle-->
    <style name="StatusBarLayoutStyle">
        <item name="android:background">@drawable/mode_light_bg_custom_appbar</item>
    </style>

    <!-- StatusBarSearchLayoutStyle-->
    <style name="StatusBarSearchLayoutStyle">
        <item name="android:background">@drawable/mode_light_bg_toolbar</item>
    </style>

    <style name="expandedBarText" parent="Theme.StrainCalculator">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <!--"TabLayoutStyle"-->
    <style name="TabLayoutStyle">
        <item name="tabIndicatorColor">#000000</item>
        <item name="tabSelectedTextColor">#000000</item>
        <item name="tabTextColor">#777777</item>
        <item name="android:background">@drawable/mode_light_bg_tablayout</item>
    </style>



    <!--    Navigation view-->
    <style name="NavigationView" parent="@style/Widget.MaterialComponents.NavigationView">
        <item name="android:background">@drawable/mode_light_navigation_view</item>
        <item name="itemHorizontalPadding">@dimen/nav_item_horizontal_padding</item>
    </style>


    <!--  layout style-->
    <style name="LayoutStyle">
        <item name="android:background">@color/white</item>
    </style>


    <!-- Custom style for the TextView -->
    <style name="TextViewStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Custom style for the TextViewSmall -->
    <style name="TextViewStyleSmall">
        <item name="android:textColor">#4D4C4C</item>
    </style>


    <!--"BackButtonStyle"-->
    <style name="BackButtonStyle">
        <item name="android:background">@drawable/mode_light_bg_backbutton</item>
    </style>
    <!--    View line-->
    <style name="ViewStyle">
        <item name="android:background">#000000</item>
    </style>


    <!--NextPreviousRipple-->
    <style name="next_previous_ripple">
        <item name="android:background">@drawable/mode_light_bg_next_previous_ripple</item>
    </style>

    <!--"EdiText"-->
    <style name="EditTextStyle">
        <item name="android:background">@drawable/mode_light_edittext</item>
    </style>

</resources>

